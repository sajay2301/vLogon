<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:id="@+id/loginlayout"
              android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:background="@drawable/white_rounded_corder"
                android:elevation="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_gravity="center"

                android:paddingTop="@dimen/_15sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                <View
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="Enter Mobile Number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                >


                    <LinearLayout
                            android:background="@drawable/rounded_corner"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_height="35dp">


                        <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/selectcountrycode"
                                android:layout_marginLeft="2dp"

                                android:ellipsize="end"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:background="@drawable/fill_rounded_color"


                                android:fontFamily="sans-serif-medium"
                                android:lines="1"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:text="+91"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                        />
                        <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:orientation="vertical"

                        >
                            <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"

                                    android:ellipsize="end"
                                    android:id="@+id/etmobilenumber"

                                    android:gravity="center_vertical"
                                    android:fontFamily="sans-serif-medium"
                                    android:lines="1"
                                    android:drawableLeft="@drawable/mobile_icon"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:background="@drawable/white_blank_border"
                                    android:hint="Mobile Number"
                                    android:maxLength="10"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textSize="16dp"
                            />
                        </LinearLayout>


                </LinearLayout>



                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                >

                    <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="@string/cancel"
                            android:id="@+id/buttoncancel"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />
                    <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="ok"
                            android:id="@+id/buttonok"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>



    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>