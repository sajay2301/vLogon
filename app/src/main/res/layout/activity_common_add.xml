<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/cont_item_root">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/dimen_0"
            android:id="@+id/llClubDetailsToolbar"
            android:layout_height="wrap_content">
        <include

                layout="@layout/layout_toolbar"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/linearaddressbook"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"


        >

            <ImageView
                    android:layout_width="50dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="50dp"
                    android:src="@drawable/addressbook_icon"
                    android:layout_gravity="center_vertical"

            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tvContactName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Import From Addressbook"/>

                <TextView
                        android:id="@+id/tvPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Add From Addressbook"/>


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical">

                <Button
                        android:id="@+id/btnupdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_chevron_right_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/linearqrscan"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"

        >

            <ImageView
                    android:layout_width="50dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="50dp"
                    android:src="@drawable/qr_code_icon"
                    android:layout_gravity="center_vertical"

            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Scan"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Scan Contact's QR code"/>


            </LinearLayout>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_chevron_right_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/linearqrscangallery"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"

        >

            <ImageView
                    android:layout_width="50dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="50dp"
                    android:src="@drawable/qr_code_icon"
                    android:layout_gravity="center_vertical"

            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Choose QR Code From Album"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Scan Contact's QR code"/>


            </LinearLayout>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_chevron_right_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/linearaddmanually"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

        >

            <ImageView
                    android:id="@+id/ivContactImage"
                    android:layout_width="50dp"
                    android:src="@drawable/add_manually_icon"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"

            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Add Manually"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Contact Add Manually"/>


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_chevron_right_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/linearaddmobilenumber"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

        >

            <ImageView
                    android:src="@drawable/add_mobile_number"
                    android:layout_width="50dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"

            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Add Mobile Number"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Contact Add by Mobile Number"/>


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_chevron_right_black_24dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
